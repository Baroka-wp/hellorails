<div id="comments_area" class="comment_info">
    <% if post.comments.empty? %>
        <p>0 comment</p>
    <% else %>
        <% post.comments.each do |comment| %>
            <p>
                <%= comment.text %> <span>by: <%= comment.user.name %><span>
            </p>
            <%if can? :manage, comment%>
                <%=button_to "delete", post_comment_path(post.id, comment.id), method: :delete,  data: {confirm: 'Are You Sure You Want to Delete This Post'}, class: 'log_out'%>
            <% end %>
        <% end %>
    <% end %>
</div>