<div class="user_details">
    <section class="top">
        <%= image_tag @user.photo, size: "160x90", alt: "Edit Entry"%>
        <div>
            <h1><%= @user.name %></h1>
            <p>Number of posts : <%= @user.posts_count %></p>
        </div>
    </section>
    <section class="bio">
        <h3>Bio</h3>
        <p><%= @user.bio %></p>
    </section>
    <section class="posts">
        <% @user.posts.each_with_index do |post, index| %>
            <div class="post_info">
                <h3>Post#<%=index%>: <%= post.title %></h3>
                <p><%= post.text %></p>
            </div>
        <% end %>
        <%=button_to "See all posts", user_post_path(@user)%>
    </section>
</div>