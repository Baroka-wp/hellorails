<div class="user_details">
   <%= render 'shared/user_details'%>
    <section class="bio">
        <h3>Bio</h3>
        <p><%= @user.bio %></p>
    </section>
    <section class="posts">
        <% @user.three_laster_posts.each_with_index do |post, index| %>
            <div class="post_info">
                <h3>Post#<%=index%>: <%= post.title %></h3>
                <p><%= post.text %></p>
            </div>
        <% end %>
    </section>
    <%=link_to "See all posts", user_posts_path(@user)%>
</div>